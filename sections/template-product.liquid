<style>
  .swiper-button-prev,
  .swiper-button-next {
    color: black;
    top: auto !important;
    height: 20px;
  }
  .swiper-button-prev::after,
  .swiper-button-next::after {
    font-size: 20px;
  }

  .swiper-pagination-bullet-active {
    background-color: white;
    opacity: 1;
  }

  .swiper-pagination-bullet {
    background-color: #edf0ee;
    {% comment %} opacity: 0.4 !important; {% endcomment %}
  }

  .variant-swatch-input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .variant-swatch-label {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 48px;
    min-height: 48px;
    padding: 0.25rem 0.75rem;
    border-radius: 14px;
    border: 1px solid #2f3647;
    background-color: #10182b;
    color: #e1e3ef;
    font-weight: 600;
    letter-spacing: 0.025em;
    text-transform: uppercase;
    cursor: pointer;
    transition: background-color 0.15s ease, color 0.15s ease, border-color 0.15s ease;
  }

  .variant-swatch-label:hover {
    border-color: #ffffff;
  }

  .variant-swatch-input:checked + .variant-swatch-label {
    background-color: #ffffff;
    color: #030712;
    border-color: #ffffff;
  }
</style>

{% assign selected_variant = product.selected_or_first_available_variant %}

<script>
  const selectedVariant = {{ selected_variant | json }};
  console.log('selectedVariant', selectedVariant);
</script>

<div class="min-h-[100vh] h-auto md:mx-auto md:py-8 bg-[#23180F] text-white">
  <div class="max-w-6xl mx-auto">
   

    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
      <div class="product--medias">
        <div class="hidden md:block">
          {% for media in product.media %}
            <div class="h-full overflow-hidden p-2">
              {% render 'product-media', media: media, media_class: 'w-full object-cover' %}
            </div>
          {% endfor %}
        </div>
        <div class="md:hidden block">
          <div class="swiper ">
            <div class="swiper-wrapper">
              {% for media in product.media %}
                <div class="swiper-slide">
                  <div class="h-[100vw] overflow-hidden">
                    {% render 'product-media', media: media, media_class: 'w-full object-cover' %}
                  </div>
                </div>
              {% endfor %}
            </div>

            <div class="swiper-pagination"></div>

            <!-- If we need navigation buttons -->
            {% comment %}
              <div class="swiper-button-prev">Prev</div>
              <div class="swiper-button-next">Next</div>
            {% endcomment %}

            <!-- If we need scrollbar -->
            {% comment %} <div class="swiper-scrollbar"></div> {% endcomment %}
          </div>
        </div>
      </div>

      <div class="product--information mx-4">
        {% form 'product', product, id: 'product-form', novalidate: 'novalidate' %}
          <input type="hidden" name="id" value="{{ selected_variant.id }}">

          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'vendor' %}
                <div class="my-3">
                  <p class="text-xs text-gray-500">{{ product.vendor }}</p>
                </div>
              {% when 'title' %}
                <h1 class="text-3xl font-bold">{{ product.title }}</h1>
              {% when 'price' %}
                <div class="flex mt-4 gap-2" id="price-{{ section.id }}">
                  {% assign product_price = selected_variant %}

                  {% if product_price.compare_at_price %}
                    <p class="text-xl line-through text-gray-400">{{ product_price.compare_at_price | money }}</p>
                  {% endif %}
                  <span class="text-2xl text-white font-bold"> {{ product_price.price | money }}</span>
                  {% if product_price.price < product_price.compare_at_price %}
                    <span class="px-5 py-1 text-sm font-bold bg-red-500 rounded-full text-white mx-4 my-auto"
                      >Sale</span
                    >
                  {% endif %}
                </div>

              {% when 'variant_selector' %}
                <div class="my-3">
                  {% unless product.has_only_default_variant %}
                    <variant-selector data-url="{{ product.url }}" data-section="{{ section.id }}">
                      {% for option in product.options_with_values %}
                        <label for="Option-{{ section.id }}-{{ forloop.index0 }}">{{ option.name }}</label>
                        <div class="my-2">
                          <select
                            name="options[{{ option.name | escape }}]"
                            id="Option-{{ section.id }}-{{ forloop.index0 }}"
                            class="w-full border py-1 px-3"
                            data-option-index="{{ forloop.index0 }}"
                          >
                            {% for value in option.values %}
                              <option
                                value="{{ value | escape }}"
                                {% if option.selected_value == value %}
                                  selected="selected"
                                {% endif %}
                              >
                                {{ value }}
                              </option>
                            {% endfor %}
                          </select>
                        </div>

                      {% endfor %}
                      <script type="application/json">
                        {{ product.variants | json }}
                      </script>
                    </variant-selector>
                  {% endunless %}
                </div>

              {% when 'variant_radio' %}

                <div class="my-4">
                  {% unless product.has_only_default_variant %}
                    <variant-selector data-url="{{ product.url }}" data-section="{{ section.id }}">
                      {% for option in product.options_with_values %}
                        <fieldset class="my-4">
                          <legend class="block mb-2 text-sm uppercase tracking-wide text-gray-300">
                            {{ option.name }}
                          </legend>
                          <div class="flex flex-wrap gap-3">
                            {% for value in option.values %}
                              {% capture option_id %}
                                Option-{{ section.id }}-radio-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}
                              {% endcapture %}
                              <input
                                type="radio"
                                name="options[{{ option.name | escape }}]"
                                value="{{ value | escape }}"
                                id="{{ option_id | strip_newlines | strip }}"
                                class="variant-swatch-input"
                                data-option-index="{{ forloop.parentloop.index0 }}"
                                {% if option.selected_value == value %}
                                  checked
                                {% endif %}
                              >
                              <label
                                for="{{ option_id | strip_newlines | strip }}"
                                class="variant-swatch-label"
                              >
                                {{ value }}
                              </label>
                            {% endfor %}
                          </div>
                        </fieldset>
                      {% endfor %}
                      <script type="application/json">
                        {{ product.variants | json }}
                      </script>
                    </variant-selector>
                  {% endunless %}
                </div>

              {% when 'quantity' %}
                <div class="my-3">
                  <label for="Quantity-{{ section.id }}">Quantity</label>
                  <div class="my-2">
                    <input type="number" name="quantity" id="Quantity-{{ section.id }}" value="1" min="1">
                  </div>
                </div>

              {% when 'description' %}
                <div class="my-6">
                  <p class="text-xl font-semibold">Product description</p>
                  <p class="text-gray-700">{{ product.description }}</p>
                </div>

              {% when 'checkout_buttons' %}
                <div class="my-3">
                  <button
                    type="submit"
                    name="add"
                    id=""
                    {% if selected_variant.available == false %}
                      disabled
                    {% endif %}
                    {% comment %} class="w-full px-6 py-4 bg-gray-900 text-white hover:bg-gray-500 cursor-pointer" {% endcomment %}
                    class="{% if selected_variant.available == false %}
                      w-full px-6 py-4 text-gray-300 cursor-not-allowed 
                    {% else %}
                      w-full px-6 py-4 rounded-xl font-bold text-white  cursor-pointer bg-[#FD7603] hover:bg-[#fd7803c5]
                    {% endif %}"
                  >
                    {% if selected_variant.available == false %}
                      Sold out
                    {% else %}
                      Add to cart
                    {% endif %}
                  </button>
                </div>

              {% else %}

            {% endcase %}
          {% endfor %}

          <div class="my-3"></div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

<script>
  class VariantSelector extends HTMLElement {
    constructor() {
      super();
      this.addEventListener('change', this.onVariantChange);
    }

    onVariantChange() {
      console.log('I changed the variant selector');
      this.getSelectedOptions();
      this.getSelectedVariant();

      if (this.currentVariant) {
        this.updateURL();
        this.updateFormId();
        this.updatePrice();
      }
    }

    getSelectedOptions() {
      const optionInputs = Array.from(this.querySelectorAll('[data-option-index]'));
      const selectedOptions = [];

      optionInputs.forEach((element) => {
        const index = Number(element.dataset.optionIndex);

        if (element.tagName === 'SELECT') {
          selectedOptions[index] = element.value;
          return;
        }

        if (element.type === 'radio' && element.checked) {
          selectedOptions[index] = element.value;
        }
      });

      this.options = selectedOptions;
      console.log('options', this.options);
    }

    getVariantJSON() {
      this.variantData = this.variantData || JSON.parse(this.querySelector('[type="application/json"]').textContent);

      return this.variantData;
    }

    getSelectedVariant() {
      this.currentVariant = this.getVariantJSON().find((variant) => {
        const findings = !variant.options
          .map((option, index) => {
            return this.options[index] == option;
          })
          .includes(false);

        if (findings) {
          return variant;
        }
      });

      console.log('currentVariant', this.currentVariant);
    }

    updateURL() {
      console.log('updateURL');
      if (!this.currentVariant) return false;
      window.history.replaceState({}, '', `${this.dataset.url}?variant=${this.currentVariant.id}`);
    }

    updateFormId() {
      const form_input = document.querySelector('#product-form').querySelector('input[name="id"]');
      form_input.value = this.currentVariant.id;
    }

    updatePrice() {
      fetch(`${this.dataset.url}?variant=${this.currentVariant.id}&section_id=${this.dataset.section}`)
        .then((response) => response.text())
        .then((responseText) => {
          const id = `price-${this.dataset.section}`;
          const html = new DOMParser().parseFromString(responseText, 'text/html');

          const oldPrice = document.getElementById(id);
          const newPrice = html.getElementById(id);

          if (oldPrice && newPrice) oldPrice.innerHTML = newPrice.innerHTML;
        });
    }
  }

  customElements.define('variant-selector', VariantSelector);
</script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper', {
      direction: 'horizontal',
      pagination: {
        el: '.swiper-pagination',
      },
      navigation: {
        prevEl: '.swiper-button-prev',
        nextEl: '.swiper-button-next',
      },
    });
  });
</script>

