<div class="max-w-2xl mx-auto py-16 px-4 sm:py-4 sm:px-6 lg:max-w-7xl lg:px-8 text-white">
  <h1 class="text-2xl font-bold">Account</h1>

  <div class="block md:flex gap-4">
    {% assign number_of_orders = customer.orders | size %}
    {% if number_of_orders > 0 %}
      <div class="w-full my-6 md:my-12">
        <h2 class="text-xl font-bold text-gray-300">Order history</h2>

        {% paginate customer.orders by 10 %}
          <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            {% for order in customer.orders %}
              <div class="relative">
                <div class="w-full min-h-80 bg-gray-200 rounded-md overflow-hidden lg:h-80">
                  {% if order.line_items.first.image %}
                    <img
                      src="{{ order.line_items.first.image | img_url: 'medium' }}"
                      width="50"
                      height="50"
                      class="w-full h-full object-center object-cover"
                      alt="{{ order.line_items.first.image.alt }}"
                    >
                  {% else %}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center' }}
                  {% endif %}
                </div>

                <div class="mt-4 flex items-start justify-between">
                  <div class="">
                    {% comment %}
                      Extract relative path from order.customer_url to work with localhost
                      order.customer_url returns absolute URL, so we extract just the path portion
                      Format: https://domain.com/account/orders/{id} -> /account/orders/{id}
                    {% endcomment %}
                    {% assign url_parts = order.customer_url | split: '/' %}
                    {% assign order_path = '/' | append: url_parts[3] | append: '/' | append: url_parts[4] | append: '/' | append: url_parts[5] %}
                    <h3 class="text-sm text-white">{{ order.name | link_to: order_path }}</h3>

                    <p class="mt-1 text-sm">{{ order.financial_status_label }}</p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium bg-gray-500 rounded-full px-3 py-1">
                      {{ order.fulfillment_status_label }}
                    </p>

                    <p class="text-sm font-medium px-3 py-1">
                      {{ order.total_price | money }}
                    </p>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>

          {% render 'pagination', pagination: paginate %}
        {% endpaginate %}
      </div>

    {% else %}
      <div class="w-full h-80 flex items-center justify-center">
        <h2 class="text-base md:text-2xl font-medium">You have no orders</h2>
      </div>
    {% endif %}

    <div class="w-full md:w-1/4">
      <h2 class="text-xl font-bold mb-12">Account details</h2>

      {{ customer.default_address | format_address }}

      <a
        class="text-sm text-blue-600 hover:text-blue-900 underline"
        href="{{ routes.account_addresses_url }}"
      >
        View addresses
      </a>
    </div>
  </div>
</div>
