              id="address_address1_{{ form.id }}"
              name="address[address1]"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none"
              value="{{ form.address1 | default: '' }}"
              required
            >
          </div>

          <div>
            <label for="address_address2" class="block text-sm font-medium text-white mb-2">Address 2</label>
            <input
              type="text"
              id="address_address2_{{ form.id }}"
              name="address[address2]"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none"
              value="{{ form.address2 | default: '' }}"
            >
          </div>

          <div>
            <label for="address_city" class="block text-sm font-medium text-white mb-2"
