            <label for="address_first_name" class="block text-sm font-medium text-white mb-2"
              >First name <span class="text-red-500">*</span></label
            >
            <input
              type="text"
              id="address_first_name_{{ form.id }}"
              name="address[first_name]"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors outline-none"
              value="{{ form.first_name | default: '' }}"
              required
            >
          </div>

          <div>
