<div
  class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 text-white"
>
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Register</h1>
    </div>
    <div class="mt-8">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2 ">
          <label for="first_name" class="sr-only">First name</label>
          <input
            type="text"
            name="customer[first_name]"
            id="email_address"
            autocomplete="given-name"
            class="relative block w-full px-3 py-2 border border-white"
            placeholder="First name"
          >
        </div>

        <div class="my-2 ">
          <label for="last_name" class="sr-only">Last name</label>
          <input
            type="text"
            name="customer[last_name]"
            id="last_name"
            autocomplete="last_name"
            class="relative block w-full px-3 py-2 border border-white"
            placeholder="Last name"
          >
        </div>

        <div class="my-2 ">
          <label for="birthday" class="sr-only">Birthday</label>
          <input
            type="date"
            name="customer[note][Birthday]"
            id="birthday"
            autocomplete="birthday"
            class="relative block w-full px-3 py-2 border border-white"
          >
        </div>

        <div class="my-2 ">
          <label for="email_address" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border border-white"
            placeholder="Email address"
          >
        </div>

        <div class="my-2 ">
          <label for="password" class="sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border"
            placeholder="Password"
          >
        </div>

        <div>
          <button
            type="submit"
            class="relative w-full py-2 px-4 bg-white text-black cursor-pointer hover:bg-gray-300"
          >
            Create account
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>
