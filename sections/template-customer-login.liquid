<div
  class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 text-white"
  x-data="{loginForm: true, pwRecoverForm: false}"
>
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in with your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2 ">
          <label for="email_address" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border border-white"
            placeholder="Email address"
          >
        </div>

        {% if form.password_needed %}
          <div class="my-2 ">
            <label for="password" class="sr-only">Password</label>
            <input
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="current-password"
              class="relative block w-full px-3 py-2 border"
              placeholder="Password"
            >
          </div>
        {% endif %}

        <div class="my-2 text-sm">
          <a
            x-on:click="loginForm = ! loginForm; pwRecoverForm = ! pwRecoverForm"
            class="cursor-pointer underline "
          >
            Forgot your password?
          </a>
        </div>

        <div>
          <button
            type="submit"
            class="relative w-full py-2 px-4 bg-white text-black cursor-pointer hover:bg-gray-300"
          >
            Sign In
          </button>
        </div>
      {% endform %}
    </div>
  </div>
  <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">

    <div class="my-2 text-sm">
      <a
        x-on:click="loginForm = ! loginForm; pwRecoverForm = ! pwRecoverForm"
        class="cursor-pointer"
      >
        Back
      </a>
    </div>
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Recover your password</h1>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2 ">
          <label for="email" class="sr-only">Email address</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border border-white"
            placeholder="Email address"
          >
        </div>
        <div>
          <button
            type="submit"
            class="relative w-full py-2 px-4 bg-white text-black cursor-pointer hover:bg-gray-300"
          >
            Recover password
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Customer Login",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Login"
    }
  ]
}
{% endschema %}
