<a 
  href="{{ block.settings.url }}"
  target="_blank"
  class="flex items-center gap-3 hover:opacity-80 transition cursor-pointer"
>
  {% if block.settings.icon != blank %}
    <img 
      src="{{ block.settings.icon | image_url: width: 32 }}"
      alt="{{ block.settings.title }}"
      class="w-8 h-8"
    >
  {% endif %}

  <span class="text-sm">{{ block.settings.title }}</span>
</a>